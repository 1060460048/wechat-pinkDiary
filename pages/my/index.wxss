
.top{
  width: 100%;
  height: 100px;
  margin-bottom: 10px;
  align-items: center;
  justify-content: center;
}
.top image{
  display: block;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-left: 10px;
}

.top .username{
  display: block;
  font-size: 16px;
  text-align: left;
  margin-left: 10px;
}
.top .diaryNum {
  font-size: 14px;
  margin-top: 10px;
  margin-left: 10px;
}
.top .new {
  width: 30px;
  height: 30px;
  background: url(../../images/add.png) no-repeat;
  background-size: cover;
  margin-right: 10px;
}
.navbar {
  align-items: center;
  justify-content: center;
  padding-bottom: 10px;
  border-bottom: 1px dashed #ff71a8;
}
.navbar .item {
  width: 25%;
}
.navbar .item image {
  width: 26px;
  height: 26px;
  display: block;
  margin: 0 auto;
}
.navbar .item .text {
  font-size: 14px;
  text-align: center;
}
.modal {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, .5);
    z-index: 99999;
    opacity: 0;
    transition: opacity 400ms ease-in;
    pointer-events: none;
    display: flex;
    justify-content: center;
    align-items: center;
}
.modal .dialog {
    width: 84%;
    height: 28%;
    background-color: #eceff4;
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.dialog .modal-item {
    height: 33.3%;
    width: 100%;
}
.modal-button {
    height: 100rpx;
    margin-bottom: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.modal-button view {
    width: 50%;
    border-top: 2rpx solid #E5E7ED;
    display: flex;
    justify-content: center;
    align-items: center;
}
.write-btn{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #4c4343;
  font-size: 32rpx;
  font-weight: 600;
  background:#fff url(./../../images/add_btn.png) 270rpx no-repeat;
  background-size: 60rpx 60rpx;
}
